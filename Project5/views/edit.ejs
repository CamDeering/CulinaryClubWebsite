<%- include('./partials/header.ejs') %>
    <!-- Page Information -->
    <div id="newConnPageText" class="font">
        <form method = 'POST' action = '/connection/<%= connection._id.toString() %>?_method=PUT'>
            <label for="topic">Topic:</label>
            <input type="text" id="topic" name="topic" value="<%= connection.topic %>" required><br>

            <label for="name">Title:</label>
            <input type="text" id="name" name="name" value="<%= connection.name %>" required><br>

            <label for="hostName">Host:</label>
            <input type="text" id="hostName" name="hostName" value="<%= connection.hostName %>" required><br>

            <label for="details">Details:</label>
            <input type="text" id="details" name="details" value="<%= connection.details %>" required><br>

            <label for="location">Where:</label>
            <input type="text" id="location" name="location" value="<%= connection.location %>" required><br>

            <label for="date">When:</label>
            <input type="date" id="date" name="date" value="<%= connection.date %>" required><br>

            <label for="startTime">Start:</label>
            <input type="time" id="startTime" name="startTime" value="<%= connection.startTime %>" required><br>

            <label for="endTime">End:</label>
            <input type="time" id="endTime" name="endTime" value="<%= connection.endTime %>" required><br>

            <label for="imageURl">Image URL:</label>
            <input type="text" id="imageURL" name="imageURL" value="<%= connection.imageURL %>" required><br>

            <button id="updateButton" type = 'submit'>Update</button>
        </form>
    </div>
<%- include('./partials/footer.ejs') %>